{{>layout/header}}
        <h1>Spring Web</h1>
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6">
                    <a href="/posts/save" role="button"
                       class="btn btn-primary">submit</a>
                </div>
            </div>
            <br>
            <!-- 목록 출력 영역 -->
            <table class="table table-horizontal table-bordered">
                <thead class="thead-strong">
                <tr>
                    <th>Article #</th>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Last Modified Date</th>
                </tr>
                </thead>
                <tbody id="tbody">
<!--              posts List 순회  -->
                {{#posts}}
                    <tr>
<!--                       꺽쇄 두개는 Lists 에서 뽑아낸 객체의 필드  -->
                        <td>{{id}}</td>
                        <td><a href="/posts/update/{{id}}">{{title}}</a></td>
                        <td>{{author}}</td>
                        <td>{{modifiedDate}}</td>
                    </tr>
                {{/posts}}
                </tbody>
            </table>
        </div>
{{>layout/footer}}
